<style type="text/css">
    /*Scanner*/
    @@media screen and (max-width: 320px) {
        #Icon {
            color: #5f95c3;
            font-size: 45px;
            margin-top: 15px;
            text-align: center;
        }

        .tabIcon {
            width: 100px;
            height: 115px;
            background: #f0eff1;
        }

        .p1 {
            text-align: center;
            padding-top: 15px;
        }
    }

    /*Moblie*/
    @@media screen and (max-width: 500px) {
        #Icon {
            color: #5f95c3;
            font-size: 45px;
            margin-top: 60px;
            text-align: center;
        }

            #Icon:hover {
                margin-top: 55px;
                font-size: 60px;
            }

        .tabIcon {
            width: 100%;
            height: 100%;
            background: #f0eff1;
        }

        .p1 {
            text-align: center;
            padding-top: 15px;
        }
    }

    /*Laptop*/
    @@media (min-width:900px) and (max-width:1536px) {
        #Icon {
            color: #5f95c3;
            font-size: 45px;
            margin-top: 60px;
            text-align: center;
        }

            #Icon:hover {
                margin-top: 55px;
                font-size: 60px;
            }

        .tabIcon {
            width: 100%;
            height: 100%;
            background: #f0eff1;
        }

        .p1 {
            text-align: center;
            padding-top: 15px;
        }
    }
</style>
