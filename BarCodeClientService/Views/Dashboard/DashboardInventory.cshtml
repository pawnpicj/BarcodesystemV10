@{
    ViewData["Title"] = "Dashboard-Inventory";
}
<style type="text/css">
    #Icon {
        color: #5f95c3;
        font-size: 45px;
        margin-top: 60px;
        text-align: center;
    }

        #Icon:hover {
            margin-top: 55px;
            font-size: 60px;
        }
</style>

<div class="container">
    <div class="row">
        @* InventoryTransfer (Borrow Bills) *@
        <div class="alink col-lg-3">
            <a asp-controller="Inventory" asp-action="CreateInventoryTransferBB">
                <div style="width:100%;height:100%;background:#f0eff1">
                    <div style="text-align:center">
                        <p style="text-align:center;padding-top:15px;">
                            <b>Inventory Tranfer<br>(Borrow Bills)</b><br>
                            <i id="Icon" class="fas fa-file-medical" aria-hidden="true"></i>
                        </p>
                    </div>
                </div>
            </a>
        </div>

        @* InventoryTransfer (Return Borrow Bills) *@
        <div class="alink col-lg-3">
            <a asp-controller="Inventory" asp-action="CreateInventoryTransferRBB">
                <div style="width:100%;height:100%;background:#f0eff1">
                    <div style="text-align:center">
                        <p style="text-align:center;padding-top:15px;">
                            <b>Inventory Tranfer<br>(Return Borrow Bills)</b><br>
                            <i id="Icon" class="fas fa-file-medical" aria-hidden="true"></i>
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <div class="alink col-lg-3">
            <a asp-controller="Inventory" asp-action="CreateInventoryCounting">
                <div style="width:100%;height:100%;background:#f0eff1">
                    <div style="text-align:center">
                        <p style="text-align:center;padding-top:15px;">
                            <b>Inventory Counting</b><br>
                            <i id="Icon" class="fas fa-file-medical" aria-hidden="true"></i>
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </div>
    
