    <script>
        $('#IBorrow').mouseout(function () {
            document.getElementById("IBorrow").style.backgroundColor = "#ffffff";
        });
        $('#IBorrow').mouseover(function () {
            document.getElementById("IBorrow").style.backgroundColor = "rgba(0, 74, 153,0.1)";
        });
        $('#IReturn').mouseout(function () {
            document.getElementById("IReturn").style.backgroundColor = "#ffffff";
        });
        $('#IReturn').mouseover(function () {
            document.getElementById("IReturn").style.backgroundColor = "rgba(0, 74, 153,0.1)";
        });
        $('#ICounting').mouseout(function () {
            document.getElementById("ICounting").style.backgroundColor = "#ffffff";
        });
        $('#ICounting').mouseover(function () {
            document.getElementById("ICounting").style.backgroundColor = "rgba(0, 74, 153,0.1)";
        });
    </script>
</div>