@{
    ViewData["Title"] = "Dashboard-Sale A/R";
}
<style type="text/css">
    /*Scanner*/
    @@media screen and (max-width: 320px) {
        #Icon {
            color: #5f95c3;
            font-size: 45px;
            margin-top: 15px;
            text-align: center;
        }

        .tabIcon {
            width: 100px;
            height: 115px;
            background: #f0eff1;
        }

        .p1 {
            text-align: center;
            padding-top: 15px;
        }
    }

    /*Moblie*/
    @@media screen and (max-width: 500px) {
        #Icon {
            color: #5f95c3;
            font-size: 45px;
            margin-top: 60px;
            text-align: center;
        }

            #Icon:hover {
                margin-top: 55px;
                font-size: 60px;
            }

        .tabIcon {
            width: 100%;
            height: 100%;
            background: #f0eff1;
        }

        .p1 {
            text-align: center;
            padding-top: 15px;
        }
    }

    /*Laptop*/
    @@media (min-width:900px) and (max-width:1536px) {
        #Icon {
            color: #5f95c3;
            font-size: 45px;
            margin-top: 60px;
            text-align: center;
        }

            #Icon:hover {
                margin-top: 55px;
                font-size: 60px;
            }

        .tabIcon {
            width: 100%;
            height: 100%;
            background: #f0eff1;
        }

        .p1 {
            text-align: center;
            padding-top: 15px;
        }
    }
</style>
<div class="container">
    <div class="row">
        <div class="alink col-lg-3">
            <a asp-controller="SaleOrder" asp-action="CreateDelivery">
                <div class="tabIcon">
                    <div style="text-align:center">
                        <p class="p1">
                            <b>Delivery</b><br>
                            <i id="Icon" class="fas fa-file-medical" aria-hidden="true"></i>
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <div class="alink col-lg-3">
            <a asp-controller="Return" asp-action="CreateReturn">
                <div class="tabIcon">
                    <div style="text-align:center">
                        <p class="p1">
                            <b>Delivery Return</b><br>
                            <i id="Icon" class="fas fa-file-medical" aria-hidden="true"></i>
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <div class="alink col-lg-3">
            <a asp-controller="SaleOrder" asp-action="CreateBarCodeSaleOrder">
                <div class="tabIcon">
                    <div style="text-align:center">
                        <p class="p1">
                            <b>Print Label Delivery</b><br>
                            <i id="Icon" class="fas fa-file-medical" aria-hidden="true"></i>
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

