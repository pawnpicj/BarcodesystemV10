@{
    ViewData["Title"] = "Aministrator";

}
<style type="text/css">
    #Icon {
        text-align: center;
        margin-top: 60px;
        font-size: 50px;
        color: #5f95c3;
    }

        #Icon:hover {
            margin-top: 55px;
            font-size: 60px;
        }
    #User {
        margin-top: 0px;
    }

    #User:hover {
        margin-top: 3px;
    }
    #Label {
        margin-top: 0px;
    }

    #Label:hover {
        margin-top: 3px;
        color: #ffffff;
    }
</style>

<div class="container">
    <div class="row">
        @*Bin Location *@
        <div class="col-lg-3" style="width: 250px;height: 250px;margin-top:30px;">
            <a asp-controller="Admin" asp-action="UserSetup">
                <div style="width: 100%; height: 100%; background: #ffffff" id="User">
                    <div style="text-align:center">
                        <p style="text-align: center; padding-top: 15px; color: #386994; font-weight: 300; font-size: 20px "><b>User</b></p>
                    </div>
                    <div style="width:100%;height:100%;text-align:center">
                        <i id="Icon" class="fas fa-users" aria-hidden="true"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3" style="width: 250px;height: 250px;margin-top:30px;">
            <a asp-controller="CreateLabelSticker" asp-action="ItemMaster">
                <div style="width: 100%; height: 100%; background: #ffffff" id="Label">
                    <div style="text-align:center">
                        <p style="text-align: center; padding-top: 15px; color: #386994; font-weight: 300; font-size: 20px "><b>Label Setup</b></p>
                    </div>
                    <div style="width:100%;height:100%;text-align:center">
                        <i id="Icon" class="fas fa-file-medical" aria-hidden="true"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <script>
        $('#User').mouseout(function () {
            document.getElementById("User").style.backgroundColor = "#ffffff";
        });
        $('#User').mouseover(function () {
            document.getElementById("User").style.backgroundColor = "rgba(0, 74, 153,0.1)";
        });
        $('#Label').mouseout(function () {
            document.getElementById("Label").style.backgroundColor = "#ffffff";
        });
        $('#Label').mouseover(function () {
            document.getElementById("Label").style.backgroundColor = "rgba(0, 74, 153,0.1)";
        });
    </script>
</div>