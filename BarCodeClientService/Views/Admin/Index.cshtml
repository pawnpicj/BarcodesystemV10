@{
    ViewData["Title"] = "Aministrator";

}
<style type="text/css">
    #Icon {
        color: #5f95c3;
        font-size: 45px;
        margin-top: 60px;
        text-align: center;
    }

    #Icon:hover {
            margin-top: 55px;
            font-size: 60px;
    }
</style>

<div class="container">
    <div class="row">
        @*Bin Location *@
        <div class="alink col-lg-3">
            <a asp-controller="Admin" asp-action="UserSetup">
                <div style="width:100%;height:100%;background:#f0eff1">
                    <div style="text-align:center">
                        <p style="text-align:center;padding-top:15px;">
                            <b>User</b><br>
                            <i id="Icon" class="fas fa-users" aria-hidden="true"></i>
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <div class="alink col-lg-3">
            <a asp-controller="Admin" asp-action="Authorize">
                <div style="width:100%;height:100%;background:#f0eff1">
                    <div style="text-align:center">
                        <p style="text-align:center;padding-top:15px;">
                            <b>Label Setup</b><br>
                            <i id="Icon" class="fas fa-file-medical" aria-hidden="true"></i>
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <div class="alink col-lg-3">
            <a asp-controller="Admin" asp-action="ProgramAndDriver">
                <div style="width:100%;height:100%;background:#f0eff1">
                    <div style="text-align:center">
                        <p style="text-align:center;padding-top:15px;">
                            <b>Program and Driver</b><br>
                            <i id="Icon" class="fas fa-download" aria-hidden="true"></i>
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <script>
        $('#User').mouseout(function () {
            document.getElementById("User").style.backgroundColor = "#ffffff";
        });
        $('#User').mouseover(function () {
            document.getElementById("User").style.backgroundColor = "rgba(0, 74, 153,0.1)";
        });
        $('#Label').mouseout(function () {
            document.getElementById("Label").style.backgroundColor = "#ffffff";
        });
        $('#Label').mouseover(function () {
            document.getElementById("Label").style.backgroundColor = "rgba(0, 74, 153,0.1)";
        });
    </script>
</div>