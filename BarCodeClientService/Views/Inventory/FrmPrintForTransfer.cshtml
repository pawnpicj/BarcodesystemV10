                        data: { print: print},
                        dataType: "JSON",
                        success: function (data) {
                            //console.log(data);
                            if (data == 1) {
                                window.location.href = "@Url.Action("PrintListForTransfer", "Inventory")";
                            }
                        }
                    });
            }

        }

    });
    //End #PrintList

</script>